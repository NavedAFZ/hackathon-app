<%= form_with(model: challenge, local: true) do |form| %>
  <% if challenge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>

      <ul>
        <% challenge.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col" class="text-center"><%= form.label :title %></th>
      <th scope="col" class="text-center"><%= form.label :description %></th>
      <th scope="col" class="text-center"> <%= form.label :tags %> </th>
      <th colspan=1></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="text-center"><%= form.text_field :title %></td>
      <td class="text-center"><%= form.text_field :description %></td>
      
      
      <td class="text-center"> <%= form.select :tags, [ 'sorting','DP','Greedy','Tree', 'Graph','Recursion','Bitmasking' ], :prompt => 'Select One' %></td>
        <div class="field">
   </div>

       <div class="actions">
   <td> <%= form.submit class:"btn-small btn-primary"%></td>
  </div>
    </tr>
    
  </tbody>
</table>
  

<% end %>
